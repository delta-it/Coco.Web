<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="~/img/logo.png" />
    <title>@ViewData["Title"] - Camino Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    @RenderSection("Head", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-sm-3 col-md-2 collapse show" id="mainNavigation">
                @await Component.InvokeAsync("MainNavigation")
            </div>
            <div class="col">
                @await Component.InvokeAsync("TopNavigation")

                <div class="mt-3 mx-3">
                    <span class="text-secondary">
                        @RenderSection("Title", required: false)
                    </span>
                </div>

                <div class="card main mt-3 mb-3 box-shadow">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("Footer")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
