@{
    ViewData["Title"] = $"Update role {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RoleViewModel

<div class="card-header bg-secondary text-light">
    <a asp-action="Index" asp-controller="Role" class="btn btn-sm btn-light">
        <i class="fa fa-arrow-left"></i>
    </a>
    @ViewData["Title"]
</div>
<div class="card-body">
    <form method="post" asp-action="Update" asp-controller="Role">
        <partial name="_CreateOrUpdateForm" />
    </form>
</div>
