@model ProductAttributeRelationModel

<div class="card mb-3">
    <div class="card-header">
        <div class="row">
            <div class="col-10">
                <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAttribute-@Model.Id" aria-expanded="false" aria-controls="collapseAttribute-@Model.Id">
                    <i class="fa fa-angle-down"></i>
                </button>
                <span>Thuộc tính: @Model.Name</span>
                <span class="mx-2">-</span>
                <span>Kiểu hiển thị: @Model.ControlTypeName</span>
                <span class="mx-2">-</span>
                <span>Thứ tự: @Model.DisplayOrder</span>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-outline-danger btn-sm float-right ml-2" data-bs-toggle="modal" data-bs-target="#deleteAttribute-@Model.Id">
                    <i class="fa fa-trash-alt"></i>
                </button>
                <button type="button" class="btn btn-outline-dark btn-sm float-right" data-bs-toggle="modal" data-bs-target="#editAttribute-@Model.Id">
                    <i class="fa fa-pencil-alt"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="collapse" id="collapseAttribute-@Model.Id">
        <ul class="list-group">
            @foreach (var attributeValue in Model.AttributeRelationValues)
            {
                <li class="list-group-item">
                    <partial name="_ProductAttributeValue" model="attributeValue" />
                </li>
            }
        </ul>
    </div>
</div>
