@model ProductModel
@{
    ViewData["Title"] = "Product " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header bg-dark text-light">
    <div class="row">
        <div class="col-auto mr-auto">
            <a asp-action="Index" asp-controller="Product" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-arrow-left"></i>
            </a>
            @ViewData["Title"]
        </div>
        <div class="col-auto">
            @if (Model.CanUpdate)
            {
                <a asp-action="Update" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit"></i>
                </a>
            }
        </div>
    </div>
</div>
<div class="card-body">
    <div class="form-row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-7">
            <div class="form-group">
                <h2>@Model.Name</h2>
            </div>
        </div>
    </div>
    <div class="form-row">
        @foreach (var item in Model.Pictures)
        {
            <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                <div class="form-group mb-3">
                    <img src="@Url.Action("Get", "Picture", new { id = item.PictureId })" alt="..." class="img-thumbnail">
                </div>
            </div>
        }
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-7">
            <div class="form-group">
                <label>Attributes</label>
                @foreach (var attribute in Model.ProductAttributes)
                {
                    <partial name="_Attribute" model="attribute" />
                }
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Price</label>
                <span class="form-control" readonly>@Model.Price</span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-7">
            <div class="form-group">
                <p>@Html.Raw(Model.Description)</p>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Created by</label>
                <span class="form-control" readonly>@Model.CreatedBy</span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Created date</label>
                <span class="form-control" readonly>@Model.CreatedDate.ToDateHourMinusFormat()</span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Updated by</label>
                <span class="form-control" readonly>@Model.UpdatedBy</span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Updated date</label>
                <span class="form-control" readonly>@Model.UpdatedDate.ToDateHourMinusFormat()</span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Categories</label>
                @foreach (var category in Model.ProductCategories)
                {
                    <span class="form-control" readonly>@category.Name</span>
                }
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Farms</label>
                @foreach (var farm in Model.ProductFarms)
                {
                    <span class="form-control" readonly>@farm.FarmName</span>
                }
            </div>
        </div>
    </div>
</div>
