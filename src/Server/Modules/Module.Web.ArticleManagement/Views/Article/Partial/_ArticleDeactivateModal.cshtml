@model ArticleIdRequestModel
<div class="modal fade" id="articleDeactivateModal" tabindex="-1" aria-labelledby="articleDeactivateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form action="@Url.Action("Deactivate")" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="articleDeactivateLabel">Block this Article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" class="article-id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-dark" id="blockArticle">Block</button>
                </div>
            </div>
        </form>
    </div>
</div>