@using Camino.Infrastructure.Enums
@model ShortcutModel

<input asp-for="Id" type="hidden" />
<div class="form-row">
    <div class="col-12 col-sm-9 col-md-8 col-lg-6">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" asp-for="Name">
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-12 col-sm-9 col-md-8 col-lg-6">
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-12 col-sm-9 col-md-8 col-lg-6">
        <div class="form-group">
            <label for="description">Url</label>
            <textarea class="form-control" asp-for="Url"></textarea>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-12 col-sm-9 col-md-8 col-lg-6">
        <div class="form-group">
            <label for="description">Icon</label>
            <textarea class="form-control" asp-for="Icon"></textarea>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-12 col-sm-9 col-md-8 col-lg-6">
        <div class="form-group">
            <label for="description">Order</label>
            <input type="number" class="form-control" asp-for="Order" />
        </div>
    </div>
</div>

@if (Model.Id == 0 || Model.TypeId > 0)
{
    <div class="form-row">
        <div class="col-12 col-sm-9 col-md-8 col-lg-6">
            <div class="form-group">
                <label>Type</label>
                <select class="form-control select2-remote-ajax"
                        data-url="@Url.Action("SearchShortcutTypes", "Shortcut")" asp-for="TypeId">
                    <option value="@Model.TypeId" selected="selected">@(EnumUtil.GetDescription(Model.TypeId))</option>
                </select>
            </div>
        </div>
    </div>
}


@if (Model.Id <= 0)
{
    <button type="submit" class="btn btn-primary">Create</button>
}
else
{
    <button type="submit" class="btn btn-primary">Update</button>
}
